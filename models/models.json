{
    "$schema": "./schema.json",
    "packs": [
        {
            "class": "ResourcePack",
            "json_resources": [
                {
                    "class": "AnimationFileRP",
                    "name": "animation_files",
                    "file_path": "animations"
                },
                {
                    "class": "EntityRP",
                    "name": "entities",
                    "file_path": "entity"
                },
                {
                    "class": "ModelFile",
                    "name": "model_files",
                    "file_path": "models"
                },
                {
                    "class": "ItemRP",
                    "name": "items",
                    "file_path": "items"
                }
            ]
        },
        {
            "class": "BehaviorPack",
            "json_resources": [
                {
                    "class": "EntityFileBP",
                    "name": "entities",
                    "file_path": "entities",
                    "getter": {
                        "name": "get_entity",
                        "property": "identifier"
                    }
                },
                {
                    "class": "AnimationControllerFile",
                    "name": "animation_controller_files",
                    "file_path": "animation_controllers"
                },
                {
                    "class": "ItemBP",
                    "name": "items",
                    "file_path": "items"
                }
            ]
        }
    ],
    "json_resources": [
        {
            "class": "ItemRP",
            "properties": [
                {
                    "path": "'minecraft:item'.description.identifier",
                    "name": "identifier"
                },
                {
                    "path": "format_version",
                    "name": "format_version"
                }
            ],
            "sub_resources": [
                {
                    "class": "Component",
                    "name": "components",
                    "path": "$.'minecraft:item'.components.*"
                }
            ]
        },
        {
            "class": "ItemBP",
            "properties": [
                {
                    "path": "'minecraft:item'.description.identifier",
                    "name": "identifier"
                }
            ],
            "sub_resources": [
                {
                    "class": "Component",
                    "name": "components",
                    "path": "$.'minecraft:item'.components"
                }
            ]
        },
        {
            "class": "EntityRP",
            "sub_resources": [
                {
                    "class": "AnimationRP",
                    "path": "$.'minecraft:client_entity'.description.animations.*",
                    "name": "animations"
                }
            ]
        },
        {
            "class": "AnimationFileRP",
            "properties": [
                {
                    "name": "format_version",
                    "path": "$.format_version"
                }
            ],
            "sub_resources": [
                {
                    "class": "AnimationRP",
                    "path": "$.animations.*",
                    "name": "animations"
                }
            ]
        },
        {
            "class": "EntityFileBP",
            "properties": [
                {
                    "path": "$.format_version",
                    "name": "format_version"
                },
                {
                    "path": "$.'minecraft:entity'.description.identifier",
                    "name": "identifier"
                }
            ],
            "sub_resources": [
                {
                    "class": "ComponentGroup",
                    "path": "$.'minecraft:entity'.component_groups.*",
                    "name": "component_groups"
                },
                {
                    "class": "Component",
                    "path": "$.'minecraft:entity'.component_groups.*",
                    "name": "components"
                },
                {
                    "class": "Event",
                    "path": "$.'minecraft:entity'.events.*",
                    "name": "events"
                }
            ]
        },
        {
            "class": "ModelFile",
            "sub_resources": [
                {
                    "class": "Model",
                    "name": "models",
                    "path": "'minecraft:geometry'.[*]"
                }
            ]
        },
        {
            "class": "AnimationControllerFile",
            "sub_resources": [
                {
                    "class": "AnimationController",
                    "name": "animation_controllers",
                    "path": "animation_controllers.*"
                }
            ]
        }
    ],
    "sub_resources": [
        {
            "class": "AnimationControllerState"
        },
        {
            "class": "Model",
            "sub_resources": [
                {
                    "class": "Bone",
                    "path": "bones.[*]",
                    "name": "bones"
                }
            ]
        },
        {
            "class": "AnimationRP"
        },
        {
            "class": "AnimationController",
            "sub_resources": [
                {
                    "class": "AnimationControllerState",
                    "path": "states.*",
                    "name": "states"
                }
            ]
        },
        {
            "class": "ComponentGroup",
            "sub_resources": [
                {
                    "class": "Component",
                    "name": "components",
                    "path": "*"
                }
            ]
        },
        {
            "class": "Component",
            "parameters": [
                {
                    "name": "component_group",
                    "class": "ComponentGroup"
                }
            ]
        },
        {
            "class": "Event",
            "sub_resources": [
                {
                    "class": "ComponentGroup",
                    "name": "groups_to_add",
                    "path": "add.component_groups.[*]",
                    "getter_argument": "self.parent.get_component_group(match.value)"
                },
                {
                    "class": "ComponentGroup",
                    "name": "groups_to_remove",
                    "path": "remove.component_groups.[*]",
                    "getter_argument": "self.parent.get_component_group(match.value)"
                }
            ]
        },
        {
            "class": "Bone",
            "sub_resources": [
                {
                    "class": "Cube",
                    "name": "cubes",
                    "path": "cubes[*]"
                }
            ]
        },
        {
            "class": "Cube"
        }
    ]
}